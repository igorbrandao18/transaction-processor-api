{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": "test/unit/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/main.ts",
    "!src/app.module.ts",
    "!src/app.controller.ts",
    "!src/app.service.ts"
  ],
  "coverageDirectory": "../coverage/unit",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/",
    "/dist/",
    "/migrations/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 90,
      "lines": 95,
      "statements": 95
    },
    "./src/services/**/*.ts": {
      "branches": 80,
      "functions": 100,
      "lines": 100,
      "statements": 100
    },
    "./src/repositories/**/*.ts": {
      "branches": 95,
      "functions": 100,
      "lines": 100,
      "statements": 100
    },
    "./src/controllers/**/*.ts": {
      "branches": 75,
      "functions": 100,
      "lines": 100,
      "statements": 100
    },
    "./src/middleware/**/*.ts": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    },
    "./src/filters/**/*.ts": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    },
    "./src/utils/**/*.ts": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    },
    "./src/dto/**/*.ts": {
      "branches": 60,
      "functions": 0,
      "lines": 85,
      "statements": 85
    },
    "./src/entities/**/*.ts": {
      "branches": 70,
      "functions": 0,
      "lines": 95,
      "statements": 95
    },
    "./src/config/database.config.ts": {
      "branches": 50,
      "functions": 100,
      "lines": 100,
      "statements": 100
    },
    "./src/dto/query-transactions.dto.ts": {
      "branches": 70,
      "functions": 0,
      "lines": 84,
      "statements": 84
    }
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@entities/(.*)$": "<rootDir>/src/entities/$1",
    "^@services/(.*)$": "<rootDir>/src/services/$1",
    "^@repositories/(.*)$": "<rootDir>/src/repositories/$1",
    "^@controllers/(.*)$": "<rootDir>/src/controllers/$1",
    "^@dto/(.*)$": "<rootDir>/src/dto/$1",
    "^@config/(.*)$": "<rootDir>/src/config/$1",
    "^@utils/(.*)$": "<rootDir>/src/utils/$1",
    "^@middleware/(.*)$": "<rootDir>/src/middleware/$1",
    "^@filters/(.*)$": "<rootDir>/src/filters/$1",
    "^@queues/(.*)$": "<rootDir>/src/queues/$1",
    "^@processors/(.*)$": "<rootDir>/src/processors/$1",
    "^@app.module$": "<rootDir>/src/app.module",
    "^@test-helpers/(.*)$": "<rootDir>/test/helpers/$1"
  }
}

